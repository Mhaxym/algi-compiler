with an_sintactic_tokens; use an_sintactic_tokens;
with asintactic; use asintactic;
with decls.d_arbre; use decls.d_arbre;
procedure semantica.prova_sintaxi is
begin
   put("-----------------------------------------------------------");new_line;
   put("-----------------------------------------------------------");new_line;
   put("-------------PROVA DE L'ANALITZADOR SINTÀCTIC--------------");new_line;
   put("--                                                       --");new_line;
   put("--                                                       --");new_line;
   put("-------ANALITZARÀ EL CONTINGUT DEL FITXER prova.txt--------");new_line;
   put("-----------------------------------------------------------");new_line;
   put("-----------------------------------------------------------");new_line;
   new_line;

  -- PROVA PER Analitzador Sintàctic
   Open_Input("prova.txt");
   yyparse;
   Close_Input;
   put("********No ha aparegut cap error sintàctic.****************");new_line;
   new_line;
   recorregut(arrel);

   put("-----------------------------------------------------------");new_line;
   put("-----------------------------------------------------------");new_line;
   put("-----------------FINAL PROVES COMPILADOR-------------------");new_line;
   put("-----------------------------------------------------------");new_line;
   put("-----------------------------------------------------------");new_line;

end semantica.prova_sintaxi;
